# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Default charset
[*.{js,html,css,json}]
charset = utf-8

# 4 space indentation for markup and css
[*.{html,css}]
indent_style = tab
indent_size = 4

# 2 space indentation for code
[*.{js,json,sh}]
indent_style = tab
indent_size = 2

# Matches the exact files: .bowerrc
[{.bowerrc}]
indent_style = tab
indent_size = 2
